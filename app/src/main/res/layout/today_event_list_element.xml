<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:paddingBottom="8dp">

    <TextView
            android:text="No Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textColor="@color/black"/>
    <TextView
            android:text="No Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="128dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/black"
            android:singleLine="false"/>
    <TextView
            android:text="No Room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/roomTextView" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timeTextView" android:textSize="10sp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:visibility="visible"
            android:id="@+id/roomLoaderProgressBar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timeTextView"/>
</android.support.constraint.ConstraintLayout>